{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Excalibur",
  "version": "0.1.0",
  "identifier": "com.excalibur.canvas",
  "build": {
    "beforeDevCommand": "cd \"$(git rev-parse --show-toplevel)/frontend\" && npm run dev -- --host",
    "beforeBuildCommand": "cd \"$(git rev-parse --show-toplevel)/frontend\" && npm run build",
    "devUrl": "http://localhost:5200",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Excalibur",
        "width": 1280,
        "height": 820,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["excalidraw"],
        "name": "Excalidraw Drawing",
        "role": "Editor",
        "rank": "Owner"
      }
    ]
  }
}
